{
  "compilerOptions": {
    "target": "es6",                 // Nível de compatibilidade ECMAScript (ES6)
    "module": "commonjs",            // Sistema de módulos a ser utilizado (CommonJS)
    "outDir": "./build",             // Caminho para a pasta de saída dos arquivos transpilados
    "strict": true,                  // Habilitar as verificações de tipos mais rigorosas
    "esModuleInterop": true,         // Habilitar a interoperabilidade com módulos ES6
    "skipLibCheck": true,            // Ignorar a verificação de declarações de bibliotecas
    "forceConsistentCasingInFileNames": true // Garantir consistência nos nomes dos arquivos
  },
  "include": ["src"]                 // Pasta que contém os arquivos TypeScript a serem transpilados
}
